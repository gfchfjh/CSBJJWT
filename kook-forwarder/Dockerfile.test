# Dockerfile for Stress Testing Environment

FROM python:3.11-slim

LABEL maintainer="KOOK Forwarder Team"
LABEL description="Stress testing environment for KOOK Message Forwarder"

# 设置工作目录
WORKDIR /app

# 安装系统依赖
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    libpq-dev \
    curl \
    && rm -rf /var/lib/apt/lists/*

# 复制依赖文件
COPY backend/requirements.txt backend/requirements-dev.txt ./

# 安装Python依赖
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt && \
    pip install --no-cache-dir -r requirements-dev.txt && \
    pip install --no-cache-dir pytest pytest-asyncio pytest-cov matplotlib pyyaml

# 复制项目文件
COPY . .

# 创建必要的目录
RUN mkdir -p test_results charts dashboard logs

# 设置环境变量
ENV PYTHONUNBUFFERED=1
ENV REDIS_HOST=redis
ENV REDIS_PORT=6379

# 默认命令：运行所有压力测试
CMD ["bash", "-c", "python3 demo_stress_test.py && python3 generate_charts.py && python3 performance_validator.py"]
