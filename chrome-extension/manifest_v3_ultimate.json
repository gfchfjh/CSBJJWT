{
  "manifest_version": 3,
  "name": "KOOK Cookie导出器 Ultimate",
  "version": "3.0.0",
  "description": "一键导出KOOK Cookie，支持多种格式（JSON/Netscape/Header），自动验证，历史记录管理",
  "author": "KOOK消息转发系统",
  "homepage_url": "https://github.com/gfchfjh/CSBJJWT",
  
  "permissions": [
    "cookies",
    "downloads",
    "notifications",
    "storage",
    "contextMenus"
  ],
  
  "host_permissions": [
    "*://*.kookapp.cn/*",
    "*://*.kaiheila.cn/*",
    "*://*.kaihei.co/*"
  ],
  
  "background": {
    "service_worker": "background_v3_enhanced.js"
  },
  
  "action": {
    "default_popup": "popup_v3_ultimate.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    },
    "default_title": "导出KOOK Cookie"
  },
  
  "content_scripts": [
    {
      "matches": [
        "*://*.kookapp.cn/*",
        "*://*.kaiheila.cn/*",
        "*://*.kaihei.co/*"
      ],
      "js": ["content-script-v3.js"],
      "css": ["content-style.css"],
      "run_at": "document_end"
    }
  ],
  
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  
  "commands": {
    "export-kook-cookie": {
      "suggested_key": {
        "default": "Ctrl+Shift+K",
        "mac": "Command+Shift+K"
      },
      "description": "快速导出KOOK Cookie"
    }
  },
  
  "web_accessible_resources": [
    {
      "resources": ["icons/*.png", "welcome.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
