{
  "manifest_version": 3,
  "name": "KOOK消息转发系统 - Cookie导出助手",
  "version": "1.0.0",
  "description": "一键导出KOOK Cookie到消息转发系统",
  "permissions": [
    "cookies",
    "activeTab",
    "clipboardWrite"
  ],
  "host_permissions": [
    "*://*.kookapp.cn/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.kookapp.cn/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
