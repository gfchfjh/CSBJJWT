{
  "manifest_version": 3,
  "name": "KOOK Cookie导出神器",
  "version": "3.0.0",
  "description": "一键导出KOOK Cookie，支持3种格式，自动发送到本地系统",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "permissions": [
    "cookies",
    "storage",
    "contextMenus",
    "notifications"
  ],
  "host_permissions": [
    "*://*.kookapp.cn/*",
    "http://localhost:9527/*",
    "http://127.0.0.1:9527/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    },
    "default_title": "KOOK Cookie导出"
  },
  "commands": {
    "export-cookie": {
      "suggested_key": {
        "default": "Ctrl+Shift+K",
        "mac": "Command+Shift+K"
      },
      "description": "快速导出Cookie"
    }
  }
}
