{
  "manifest_version": 3,
  "name": "KOOK Cookie自动导入助手",
  "version": "3.0.0",
  "description": "一键导出KOOK Cookie到本地转发系统，零手动操作",
  "permissions": [
    "cookies",
    "storage",
    "notifications"
  ],
  "host_permissions": [
    "*://*.kookapp.cn/*",
    "*://www.kookapp.cn/*"
  ],
  "background": {
    "service_worker": "background-optimized.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "commands": {
    "export-cookie": {
      "suggested_key": {
        "default": "Ctrl+Shift+K",
        "mac": "Command+Shift+K"
      },
      "description": "快速导出Cookie"
    }
  }
}
