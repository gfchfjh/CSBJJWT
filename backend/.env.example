# KOOK消息转发系统 - 环境配置示例
# 复制此文件为 .env 并修改配置

# ========================================
# API服务配置
# ========================================
API_HOST=127.0.0.1
API_PORT=9527

# ========================================
# Redis配置
# ========================================
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ========================================
# 图床配置
# ========================================
IMAGE_SERVER_PORT=9528
IMAGE_MAX_SIZE_GB=10
IMAGE_CLEANUP_DAYS=7
IMAGE_MAX_SIZE_MB=10.0
IMAGE_COMPRESSION_QUALITY=85
IMAGE_STRATEGY=smart

# ========================================
# 日志配置
# ========================================
LOG_LEVEL=INFO
LOG_RETENTION_DAYS=3

# ========================================
# 限流配置
# ========================================
# Discord限流（每5秒最多5条）
DISCORD_RATE_LIMIT_CALLS=5
DISCORD_RATE_LIMIT_PERIOD=5

# Telegram限流（每秒最多30条）
TELEGRAM_RATE_LIMIT_CALLS=30
TELEGRAM_RATE_LIMIT_PERIOD=1

# 飞书限流（每秒最多20条）
FEISHU_RATE_LIMIT_CALLS=20
FEISHU_RATE_LIMIT_PERIOD=1

# ========================================
# 消息重试配置
# ========================================
MESSAGE_RETRY_MAX=3
MESSAGE_RETRY_INTERVAL=30

# ========================================
# 安全配置
# ========================================
# 加密密钥（留空自动生成）
ENCRYPTION_KEY=

# 是否需要启动密码
REQUIRE_PASSWORD=false

# ========================================
# 开发模式
# ========================================
DEBUG=false

# ========================================
# 数据目录
# ========================================
# 留空使用默认：~/Documents/KookForwarder/data
# DATA_DIR=
