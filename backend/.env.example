# KOOK消息转发系统 - 环境配置示例
# 复制此文件为 .env 并根据实际情况修改

# ========== 应用配置 ==========
APP_NAME=KOOK消息转发系统
APP_VERSION=1.0.0
DEBUG=false

# ========== API服务配置 ==========
API_HOST=127.0.0.1
API_PORT=9527

# ========== Redis配置 ==========
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ========== 数据存储配置 ==========
# 数据目录（存放数据库、日志、图片等）
DATA_DIR=./data

# ========== 日志配置 ==========
LOG_LEVEL=INFO
LOG_RETENTION_DAYS=3
LOG_DIR=./data/logs

# ========== 图床服务配置 ==========
IMAGE_SERVER_PORT=9528
IMAGE_MAX_SIZE_GB=10
IMAGE_CLEANUP_DAYS=7
IMAGE_STORAGE_PATH=./data/images

# ========== 限流配置 ==========
# Discord限流（每5秒最多5条消息）
DISCORD_RATE_LIMIT_CALLS=5
DISCORD_RATE_LIMIT_PERIOD=5

# Telegram限流（每秒最多30条消息）
TELEGRAM_RATE_LIMIT_CALLS=30
TELEGRAM_RATE_LIMIT_PERIOD=1

# 飞书限流（每秒最多20条消息）
FEISHU_RATE_LIMIT_CALLS=20
FEISHU_RATE_LIMIT_PERIOD=1

# ========== 安全配置 ==========
# 数据加密密钥（请修改为随机字符串）
ENCRYPTION_KEY=your-secret-encryption-key-change-this

# ========== 验证码配置（可选） ==========
# 2Captcha API Key（用于自动识别验证码）
# CAPTCHA_API_KEY=your-2captcha-api-key

# ========== Playwright配置 ==========
# 浏览器类型（chromium/firefox/webkit）
BROWSER_TYPE=chromium
# 无头模式
HEADLESS=true

# ========== 消息处理配置 ==========
# 消息去重时间（天）
MESSAGE_DEDUP_DAYS=7
# Worker并发数
WORKER_CONCURRENCY=1
# 消息队列最大长度
QUEUE_MAX_LENGTH=10000

# ========== 健康检查配置 ==========
# 健康检查间隔（秒）
HEALTH_CHECK_INTERVAL=300
# API超时时间（秒）
API_TIMEOUT=30

# ========== 其他配置 ==========
# 时区
TIMEZONE=Asia/Shanghai
